    /**
     * Creates new form NewJFrame
     */
    public NewJFrame() {
       initComponents();
       final Stack urlStack1 = new Stack();
       final Stack urlStack2 = new Stack();
       setTitle("Chalermchai Pukrod s4050838@kmitl.ac.th - Java Web Browser (Network Programming Class Assignment#2)");
       addWindowListener(new WindowAdapter()
		{
			public void windowClosing(WindowEvent e)
			{
				System.exit(0);
			}
		} );
    
        final subthread ThreadA = new subthread();
        final subthread ThreadB = new subthread();
        getPageButton.addActionListener(new ActionListener() {

           public void actionPerformed(ActionEvent event) {
               try
               {
                   // remember URL for back button
                   urlStack1.push(URL1.getText());
                   urlStack2.push(URL2.getText());
                   
                   editorPaneA.setPage(URL1.getText());
                   editorPaneB.setPage(URL2.getText());
                   
                   String text = "ThreadA : Start get page url :"+URL1.getText()+"\n";
                   AreaA.append(text);
                   text = "ThreadB : Start get page url :"+URL2.getText()+"\n";
                   AreaB.append(text);
                   URL obj_a = new URL(URL1.getText());
                   URLConnection conn_a = obj_a.openConnection();
                   java.util.Map<String, java.util.List<String>> map_a = conn_a.getHeaderFields();
                   
                   
                   map_a.entrySet().stream().forEach((entry) -> {
                       AreaA.append("ThreadA : " + entry.getKey()
                               + " ,Value : " + entry.getValue()+"\n");
                   });
                   
                   URL obj = new URL(URL2.getText());
                   URLConnection conn = obj.openConnection();
                   java.util.Map<String, java.util.List<String>> map = conn.getHeaderFields();
                   
                   
                   map.entrySet().stream().forEach((entry) -> {
                       AreaB.append("ThreadB : " + entry.getKey()
                               + " ,Value : " + entry.getValue()+"\n");
                   });
                   
                   ThreadA.start();
                   text = "ThreadA : running"+"\n";
                   AreaA.append(text);
                   ThreadB.start();
                   text = "ThreadB : running"+"\n";
                   AreaB.append(text);
               }
               catch(IOException e)
               {
                   editorPaneA.setText("Error : " +e);
                   editorPaneB.setText("Error : " +e);
               }
           }
       });
                // editorPane Thread 1
		editorPaneA.setEditable(false);
		editorPaneA.addHyperlinkListener((HyperlinkEvent event) -> {
                    if(event.getEventType() == HyperlinkEvent.EventType.ACTIVATED)
                    {
                        try
                        {
                            urlStack1.push(event.getURL().toString());
                            URL1.setText(event.getURL().toString());
                            
                            editorPaneA.setPage(event.getURL());
                        }
                        catch(IOException e)
                        {
                            editorPaneA.setText("Error : " + e);
                        }
                    }
       });
                // editorPane Thread 2
		editorPaneB.setEditable(false);
		editorPaneB.addHyperlinkListener((HyperlinkEvent event) -> {
                    if(event.getEventType() == HyperlinkEvent.EventType.ACTIVATED)
                    {
                        try
                        {
                            urlStack2.push(event.getURL().toString());
                            URL2.setText(event.getURL().toString());
                            
                            editorPaneB.setPage(event.getURL());
                        }
                        catch(IOException e)
                        {
                            editorPaneB.setText("Error: " + e);
                        }
                    }
       });
                
    }//end

